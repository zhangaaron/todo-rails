<p id="notice"><%= notice %></p>

<h1>Listing List Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Due</th>
      <th>Done</th>
      <th>Mark done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_items.each do |list_item| %>
      <tr>
        <td><%= list_item.title %></td>
        <td><%= list_item.body %></td>
        <td><%= list_item.due %></td>
        <td><%= list_item.done %></td>
        <td><%= link_to 'Check', mark_done_path(list_item) %></td>
        <td><%= link_to 'Show', list_item %></td>
        <td><%= link_to 'Edit', edit_list_item_path(list_item) %></td>
        <td><%= link_to 'Destroy', list_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

